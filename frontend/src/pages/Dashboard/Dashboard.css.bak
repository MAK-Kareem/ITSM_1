.motion-dashboard {
    padding: 2rem;
    min-height: 100vh;
    background-color: #111;
    color: #f8fafc;
    font-family: 'Inter', sans-serif;
    position: relative;
    overflow: hidden;
}

/* Aurora Animation for Dashboard */
@keyframes aurora-float {
  0% {
    transform: translate(0, 0) scale(1);
  }
  33% {
    transform: translate(10vw, -15vh) scale(1.1);
  }
  66% {
    transform: translate(-15vw, 10vh) scale(0.9);
  }
  100% {
    transform: translate(0, 0) scale(1);
  }
}

@keyframes subtle-pulse {
  0%, 100% {
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }
  50% {
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.2);
  }
}

.motion-background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
  filter: blur(100px) brightness(1.2);
  overflow: hidden;
  opacity: 0.7;
}

.motion-gradient-glow {
  position: absolute;
  border-radius: 50%;
  mix-blend-mode: screen;
  opacity: 0.6;
  animation: aurora-float 25s ease-in-out infinite alternate;
}

.motion-glow-1 {
  width: 80vmax;
  height: 80vmax;
  background-color: #8b5cf6;
  top: -40vmax;
  left: -40vmax;
  animation-duration: 25s;
}

.motion-glow-2 {
  width: 70vmax;
  height: 70vmax;
  background-color: #3b82f6;
  top: 50%;
  left: 50%;
  animation-duration: 22s;
  animation-direction: alternate-reverse;
}

.motion-glow-3 {
  width: 60vmax;
  height: 60vmax;
  background-color: #ec4899;
  bottom: -30vmax;
  right: -30vmax;
  animation-duration: 28s;
}

.motion-glow-4 {
  width: 50vmax;
  height: 50vmax;
  background-color: #14b8a6;
  bottom: 40%;
  right: 40%;
  animation-duration: 20s;
  animation-direction: alternate-reverse;
}

.motion-dash-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2.5rem;
    position: relative;
    z-index: 2;
}

.motion-dash-title {
    display: flex;
    align-items: center;
    gap: 1rem;
}

.motion-dash-logo {
    width: 32px;
    height: auto;
}

.motion-dash-title h1 {
    font-size: 2rem;
    font-weight: 700;
    color: #fff;
}

.motion-dash-controls {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    color: #888;
}

.motion-logout-btn {
    background: #222;
    color: #eee;
    padding: 0.6rem 1.2rem;
    border: 1px solid #333;
    border-radius: 8px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
}

.motion-logout-btn:hover {
    background: #333;
    color: #fff;
    border-color: #555;
}

.motion-bento-grid {
    position: relative;
    z-index: 2;
    display: grid;
    gap: 1rem;
    grid-template-columns: repeat(4, 1fr);
    grid-auto-rows: minmax(150px, auto);
    grid-template-areas:
        "assets assets incidents helpdesk"
        "change change docs helpdesk"
        "hr sim noc policies"
        "hr hub hub policies";
}

.motion-bento-card {
    background-color: rgba(26, 26, 26, 0.8);
    border: 1px solid #333;
    border-radius: 16px;
    padding: 1.5rem;
    text-decoration: none;
    color: #fff;
    transition: all 0.3s ease;
    overflow: hidden;
    position: relative;
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    animation: subtle-pulse 6s ease-in-out infinite;
}

.motion-bento-card:nth-child(odd) {
  animation-delay: 0s;
}

.motion-bento-card:nth-child(even) {
  animation-delay: 3s;
}

.motion-bento-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1px;
  background: linear-gradient(90deg, transparent, var(--module-color), transparent);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.motion-bento-card:hover::before {
  opacity: 1;
}

.motion-bento-card:hover {
    transform: translateY(-5px);
    border-color: var(--module-color);
    background-color: #222;
}

.motion-card-content {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
}

.motion-card-icon svg {
    width: 32px;
    height: 32px;
    stroke: #888;
    stroke-width: 1.5;
    fill: none;
    transition: stroke 0.3s ease;
}

.motion-bento-card:hover .motion-card-icon svg {
    stroke: var(--module-color);
}

.motion-card-content h3 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-top: auto;
}

.motion-card-glow {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle at 50% 0%, var(--module-color) 0%, transparent 70%);
    opacity: 0;
    transition: opacity 0.4s ease;
    pointer-events: none;
}

.motion-bento-card:hover .motion-card-glow {
    opacity: 0.15;
}

/* Responsive */
@media (max-width: 1024px) {
    .motion-bento-grid {
        grid-template-columns: repeat(2, 1fr);
        grid-template-areas:
            "assets assets" "incidents helpdesk"
            "change change" "docs hr"
            "sim noc" "policies hub";
    }
}

@media (max-width: 768px) {
    .motion-dashboard { padding: 1rem; }
    .motion-dash-header {
        flex-direction: column;
        align-items: flex-start;
        gap: 1rem;
    }
    .motion-bento-grid {
        grid-template-columns: 1fr;
        grid-template-areas: "assets" "incidents" "change" "helpdesk" "docs" "hr" "sim" "noc" "policies" "hub";
    }
}
